<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TutoMaui.StackLayout"
             Title="StackLayout">
    <StackLayout Orientation="Horizontal"
                 HorizontalOptions="Center"
                 Background="Aqua"
                 WidthRequest="300"
                 Spacing="5">
        <BoxView Color="Pink" 
                 WidthRequest="50"
                 HeightRequest="50"
                 VerticalOptions="Start"/>
        <BoxView Color="Red" WidthRequest="50"/>
        <BoxView Color="Bisque" WidthRequest="50"/>
        <BoxView Color="GreenYellow" WidthRequest="50"/>
        <BoxView Color="DarkBlue" WidthRequest="50"/>
    </StackLayout>
</ContentPage>